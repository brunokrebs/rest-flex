{
  "name": "rest-flex",
  "version": "0.0.1",
  "description": "A flexible REST server focused on rapid development.",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "tsc -p ./ --outDir dist/",
    "release": "release-it",
    "start": "ts-node src/index.ts",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register tests/**/*.spec.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunokrebs/rest-flex.git"
  },
  "keywords": [
    "rest",
    "node.js",
    "node",
    "koa",
    "mongo",
    "mongodb",
    "backend"
  ],
  "author": {
    "name": "Bruno Krebs",
    "email": "krebs.bruno@gmail.com",
    "url": "https://twitter.com/brunoskrebs/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brunokrebs/rest-flex/issues"
  },
  "homepage": "https://github.com/brunokrebs/rest-flex#readme",
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/mocha": "^2.2.44",
    "@types/mockery": "^1.4.29",
    "@types/sinon": "^4.1.0",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "mockery": "^2.1.0",
    "release-it": "^5.1.1",
    "sinon": "^4.1.3",
    "ts-node": "^3.3.0"
  },
  "dependencies": {
    "codecov": "^3.0.0",
    "typescript": "^2.6.2"
  }
}
